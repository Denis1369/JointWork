<UserControl x:Class="Dent.View.NewsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dent.View"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800">
    <Grid>
        <Grid Margin="10"  
      HorizontalAlignment="Stretch" 
      VerticalAlignment="Stretch">
            

                <Rectangle
            Fill="#FFA7A7A7" 
            RadiusX="15" RadiusY="15" 
            Grid.ColumnSpan="2" 
            Grid.RowSpan="2"/>
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="290"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock 
Text="{Binding NewsTitle}" 
FontSize="18"
FontWeight="Bold"
Margin="10, 10, 5,5"
Grid.Row="0"
Grid.Column="0"
TextWrapping="Wrap"
HorizontalAlignment="Stretch"
Foreground="White"/>

                <TextBlock 
Text="{Binding NewsDesc}" 
FontSize="16"
Margin="10, 5"
Grid.Row="1"
Grid.Column="0"
TextWrapping="Wrap"
HorizontalAlignment="Stretch"
Foreground="White"/>

                <Image 
Source="{Binding DisplayedImage}" 
Grid.Column="1" Width="200" Height="200"
Grid.Row="1"
Margin="10"/>

                <TextBlock 
Text="{Binding DatePublish, StringFormat=dd.MM.yyyy}"
Grid.Column="1"
Margin="10, 10, 5, 5"
HorizontalAlignment="Right"
Foreground="White"
FontSize="16"/>
            </Grid>

                
        </Grid>
    </Grid>
</UserControl>
