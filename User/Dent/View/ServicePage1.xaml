<Page x:Class="Dent.View.ServicePage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dent.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServicePage1">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Сортировка: " HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" FontSize="18" x:Name="sort_cb" Grid.Row="0" VerticalAlignment="Center" SelectionChanged="sort_cb_SelectionChanged" Style="{StaticResource MaterialDesignComboBox}" Foreground="#FF3D7C65">
                <ComboBoxItem Content="По умолчанию" IsSelected="True"/>
                <ComboBoxItem Content="По названию (А-Я)"/>
                <ComboBoxItem Content="По названию (Я-А)"/>
                <ComboBoxItem Content="По цене (возрастание)"/>
                <ComboBoxItem Content="По цене (убывание)"/>
            </ComboBox>
            <Label Content="Поиск: " Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="search_tb" Grid.Column="3" Style="{StaticResource RoundedTextBoxStyle}"  Height="40" Margin="10" TextChanged="TextBox_TextChanged" VerticalAlignment="Center" BorderBrush="#FF3D7C65"/>
    
        </Grid>
        <ListView x:Name="ListService" Grid.Row="1"
  HorizontalContentAlignment="Stretch"
  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF3A3A3A">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0 5"/>
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>
