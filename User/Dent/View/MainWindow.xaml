<Window x:Class="Dent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dent"
        mc:Ignorable="d"
        Title="Услуги" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
       
        <Grid Background="#97D4B9"/>
        <Grid Grid.Row="1" Background="#60BA99"/>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="2" Grid.RowSpan="2" Content="г. Уфа, ул. Менделеева, 4/2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <Image Grid.Column="0" Grid.RowSpan="2" Source="/Resources/зуб.svg" HorizontalAlignment="Left" Margin="10, 15"></Image>
            <Button Grid.RowSpan="2" Grid.Column="3" Content="Запись на приём" Padding="10" VerticalAlignment="Center"  Margin="10" Background="#FF60BA99" BorderBrush="{x:Null}" Foreground="WhiteSmoke" Click="Button_Click" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </Grid>
        
        
       
        

        <Grid Grid.Row="1" Margin="80,10,80,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="Главная" x:Name="mainBtn" HorizontalAlignment="Center" Click="mainBtn_Click" VerticalAlignment="Center" Background="#00DDDDDD" BorderBrush="#00707070"/>
            <Button x:Name="servicesBtn" Content="Услуги" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Background="#00DDDDDD" BorderBrush="#00707070" Click="servicesBtn_Click_1">
                <Button.ContextMenu>
                    <ContextMenu>
                        <Button Content="Хирургия" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Терапия" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Пародонтология" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Ортодонтия" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Ортопедия" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Эффективные методы диагностики" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Детская стоматология" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>
                        <Button Content="Анастезия" Click="ServicesBtn_Click" HorizontalAlignment="Left" Background="#00DDDDDD" BorderBrush="#00707070" Foreground="#FF3A3A3A"></Button>

                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
            <Button x:Name="reviewBtn" Click="reviewBtn_Click" Content="Отзывы" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Background="#00DDDDDD" BorderBrush="#00707070"/>

        </Grid>

        
        <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
    
</Window>
