<Window x:Class="Dent.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dent.View"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="85"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid Background="#97D4B9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="1" Content="Family Dent" FontSize="28" FontWeight="Bold" Foreground="White" VerticalAlignment="Top" Margin="0, 10, 0, 0" Grid.Row="1" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" FontSize="16" Content="г. Уфа, ул. Менделеева, 4/2" Margin="0, 0, 0, 5" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

            <Image Grid.Column="0" Source="/Resources/зуб.svg" HorizontalAlignment="Left" Margin="10, 5, 5, 5"></Image>
            <Button Grid.RowSpan="2" Grid.Column="3" Content="Запись на приём" Padding="10" VerticalAlignment="Center"  Margin="10" Background="#FF60BA99" Click="Button_Click" BorderBrush="{x:Null}" Foreground="WhiteSmoke" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="15"/>
                    </Style>
                </Button.Resources>
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="Новости" >
                <ListView x:Name="ListNews" Grid.Row="2"
  HorizontalContentAlignment="Stretch"
  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF3A3A3A">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Margin" Value="0 5"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </TabItem>

            <TabItem Header="Услуги">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
                        <TextBlock  Text="Поиск: " VerticalAlignment="Center"/>
                        <TextBox x:Name="search_tb" Grid.Column="3" Style="{StaticResource RoundedTextBoxStyle}" TextChanged="search_tb_TextChanged" Text="" Width="300" Margin="20, 5"/>
                        <ComboBox SelectionChanged="servicesType_cb_SelectionChanged" x:Name="servicesType_cb" Style="{StaticResource MaterialDesignComboBox}" Foreground="#FF3D7C65" Width="150" Margin="20, 5"/>
                        <TextBlock Text="Сортировка: " VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" FontSize="18" x:Name="sort_cb" Grid.Row="0" VerticalAlignment="Center" SelectionChanged="sort_cb_SelectionChanged"  Style="{StaticResource MaterialDesignComboBox}" Foreground="#FF3D7C65">
                            <ComboBoxItem Content="По умолчанию" IsSelected="True"/>
                            <ComboBoxItem Content="По названию (А-Я)"/>
                            <ComboBoxItem Content="По названию (Я-А)"/>
                            <ComboBoxItem Content="По цене (возрастание)"/>
                            <ComboBoxItem Content="По цене (убывание)"/>
                        </ComboBox>
                    </StackPanel>
                    <ListView x:Name="ListService" Grid.Row="1"
HorizontalContentAlignment="Stretch"
ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF3A3A3A">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0 5"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Отзывы">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3.7*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="1" Grid.Row="1" PreviewTextInput="textReview_txt_PreviewTextInput" Margin="0 0 20 10" TextWrapping="Wrap" x:Name="textReview_txt"></TextBox>

                    <Button x:Name="publicReview_btn" Grid.Row="1" Grid.Column="2" BorderBrush="Transparent" Margin="0 0 0 10" Content="Опубликовать" HorizontalAlignment="Left" Width="160" VerticalAlignment="Center" Height="50" Click="publicReview_btn_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>

                    <ScrollViewer Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Padding="10" HorizontalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto">
                        <WrapPanel x:Name="ReviewContainer" Grid.ColumnSpan="2" Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
