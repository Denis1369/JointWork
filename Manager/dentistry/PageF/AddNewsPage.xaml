<Page x:Class="dentistry.PageF.AddNewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:local="clr-namespace:dentistry.Model"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewsPage">
    
    <Page.Resources>
        <Storyboard x:Key="ShowAnimation">
            <DoubleAnimation
            Storyboard.TargetName="CustomSnackbar"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="100" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation
            Storyboard.TargetName="CustomSnackbar"
            Storyboard.TargetProperty="Opacity"
            From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="HideAnimation">
            <DoubleAnimation
            Storyboard.TargetName="CustomSnackbar"
            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
            From="0" To="100" Duration="0:0:0.3"/>
            <DoubleAnimation
            Storyboard.TargetName="CustomSnackbar"
            Storyboard.TargetProperty="Opacity"
            From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>
    </Page.Resources>
    <TabControl>
        <TabItem Header="Добаление новости">
            <Grid Background="#FFE5E5E5" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="TitleT"
                 materialDesign:HintAssist.Hint="Заголовок новости"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 TextWrapping="Wrap"
                 Margin="0 0 0 16"/>

                <TextBox x:Name="DescT"
                 Grid.Row="1"
                 materialDesign:HintAssist.Hint="Текст новости"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="150"
                 Margin="0 0 0 16"/>

                <Button x:Name="SelectImg"
                Grid.Row="2"
                Content="Добавить изображение"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                materialDesign:ButtonAssist.CornerRadius="16"
                Margin="0 0 0 16"
                Click="SelectImg_Click">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ImagePlus" Margin="0 0 8 0"/>
                                <TextBlock Text="Выбрать изображения"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <ListBox Grid.Row="3"
                 ItemsSource="{Binding SelectedImages}"
                 Margin="0 0 0 16">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Padding="16" Margin="0 0 0 8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="48"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding FilePath}"
                                   Width="48"
                                   Height="48"
                                   Stretch="UniformToFill"/>

                                    <StackPanel Grid.Column="1"
                                        Margin="16 0 0 0">
                                        <TextBlock Text="{Binding Name}"
                                           FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Extension}"
                                           Opacity="0.6"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button x:Name="AddButton"
                Grid.Row="4"
                Content="Опубликовать новость"
                materialDesign:ButtonAssist.CornerRadius="2"
                HorizontalAlignment="Center"
                Click="AddButton_Click"/>

                <Border x:Name="CustomSnackbar"
        Grid.Row="5"
        Visibility="Collapsed"
        CornerRadius="12"
        Margin="16"
        Padding="24 16"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        Background="#333333"
        RenderTransformOrigin="0.5,1.0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="100" />
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock 
                        Grid.Column="1"
                        Margin="16 0 0 0"
                    x:Name="MessTextBlock"
                        Text=""
                        Foreground="White"
                        FontSize="14"
                        TextWrapping="Wrap"
                        MaxWidth="350"/>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
        <TabItem Header="Просмотр новостей">
            <Grid Background="#FFE5E5E5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DataGrid для новостей -->
                <DataGrid x:Name="NewsDataGrid"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding NewsItems}"
                      CanUserAddRows="False"
                      materialDesign:DataGridAssist.CellPadding="16"
                      Margin="16">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Height" Value="70"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <!-- Заголовок -->
                        <DataGridTextColumn 
                        Header="Заголовок"
                        Binding="{Binding NewsTitle}"
                        Width="2*"/>

                        <!-- Описание -->
                        <DataGridTextColumn 
                        Header="Описание"
                        Binding="{Binding NewsDesc}"
                        Width="3*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Дата публикации -->
                        <DataGridTextColumn 
                        Header="Дата"
                        Binding="{Binding DatePublish, StringFormat='dd.MM.yyyy'}"
                        Width="120"/>

                        <!-- Статус -->
                        <DataGridTemplateColumn Header="Статус" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox 
                                    ItemsSource="{x:Static local:NewsStatusValues.All}"
                                    SelectedItem="{Binding NewsStatus, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource MaterialDesignComboBox}"
                                    Margin="4"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Кнопка сохранения -->
                <Button 
                Grid.Row="1"
                Content="Сохранить изменения"
                Style="{StaticResource MaterialDesignRaisedButton}"
                HorizontalAlignment="Right"
                Margin="16"
                Padding="24 8"
                Click="SaveNews_Click"/>
            </Grid>
        </TabItem>
    </TabControl>

</Page>